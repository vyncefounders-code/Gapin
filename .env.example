# ═══════════════════════════════════════
# DATABASE
# ═══════════════════════════════════════
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gapin
DB_USER=gapin
DB_PASSWORD=gapin123
DATABASE_URL=postgres://gapin:gapin123@localhost:5432/gapin

# ═══════════════════════════════════════
# KAFKA / REDPANDA
# ═══════════════════════════════════════
KAFKA_BROKERS=localhost:9092
KAFKA_BROKER=localhost:9092
EVENTS_TOPIC=gapin_events
CONSUMER_GROUP=gapin_consumer

# ═══════════════════════════════════════
# REDIS (Rate Limiting & Caching)
# ═══════════════════════════════════════
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ═══════════════════════════════════════
# SERVER CONFIGURATION
# ═══════════════════════════════════════
PORT=4000
NODE_ENV=development
LOG_LEVEL=info

# ═══════════════════════════════════════
# SECURITY (Phase 1)
# ═══════════════════════════════════════
# API Rate Limiting (100 requests per 60 seconds per API key)
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=100

# Signature Verification (Optional - only needed if client sends signatures)
# If set, gateway will verify x-aibbar-signature header on events
# AIBBAR_SECRET=your_hex_encoded_secret_key_here

# JWT Tokens
JWT_SECRET=dev_jwt_secret_change_in_production_12345
JWT_EXPIRY=7d

# ═══════════════════════════════════════
# DEPLOYMENT ENVIRONMENT
# ═══════════════════════════════════════
ENVIRONMENT=development